<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="full_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="full_centered">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="title_text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subtitle_text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bold_secondaryColor">
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bold_primaryText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="italic_secondaryColor">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>